#!/bin/bash

read -p "Branch from(ex. main): " from
read -p "Branch to(ex. preview)  : " to
read -p "Version: " tag
echo "----------------------------------------------
Start merge '$from' into '$to' with '$tag' tag...
----------------------------------------------"

echo "‚öôÔ∏è [1/4] Checking working git tree"
if [[ $(git diff --stat) != "" ]]; then
  read -p "You have some changes not to commit. SURE TO CONTINUE?(Y/n): " forceYn
  if [[ $forceYn != "Y" ]]; then
    echo "üö´ Aborted"
    exit 0
  fi
else
  echo "‚úÖ Checked"
fi

echo "‚öôÔ∏è [2/4] Fetching source"
git fetch -p origin

echo "‚öôÔ∏è [3/4] Reset --hard both $from, $to working trees"
git checkout $from -q
git reset --hard origin/$from -q
echo "  ‚úÖ Reset $from branch done"
git checkout $to -q
git reset --hard origin/$to -q
echo "  ‚úÖ Reset $to branch done"

echo "‚öôÔ∏è [4/4] Merging and Push ($from -> $to)"
git merge --no-ff origin/$from -m "$tag (merged by script)" -q
git push origin $to -q
echo "  ‚úÖ Merge & Push done"

echo -e "üç∫ '$to' SHA: \033[32m$(git log --pretty=format:'%H' -n 1)"